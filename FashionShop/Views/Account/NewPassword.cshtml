@model FashionShop.Models.ViewModel.NewPasswordViewModel
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<section class="checkout spad">
    <div class="container">
        @using (Html.BeginForm("NewPassword", "Account", FormMethod.Post, new { @class = "checkout__form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m =>m.ID)
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Mật khẩu mới<span>*</span></p>
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @autofocus = "autofocus"})
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="checkout__form__input">
                                <p>Nhập lại mật khẩu mới <span>*</span></p>
                                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="site-btn ">Xác nhận</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>