@model FashionShop.Models.ViewModel.LoginViewModel
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<section class="checkout spad">
    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="alert alert-@TempData["Status"]" role="alert">
                        @TempData["Message"]
                    </div>
                </div>
            </div>
        }
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "checkout__form" }))
        {
            @Html.AntiForgeryToken()
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Tài khoản <span>*</span></p>
                                @Html.TextBoxFor(m => m.Username)
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="checkout__form__input">
                                <p>Mật khẩu <span>*</span></p>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="site-btn ">Đăng nhập</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-8 pt-3">
                    <div class="footer__social">
                        Đăng nhập khác
                        <a href="/dang-nhap/google"><i class="fa fa-google-plus"></i></a>
                        <a href="/dang-nhap/facebook"><i class="fa fa-facebook"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>