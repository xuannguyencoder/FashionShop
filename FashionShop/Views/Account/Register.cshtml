@model FashionShop.Models.ViewModel.RegisterViewModel
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<section class="checkout spad">
    <div class="container">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "checkout__form" }))
        {
            @Html.AntiForgeryToken()
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Họ <span>*</span></p>
                                @Html.TextBoxFor(m => m.FirstName)
                                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Tên <span>*</span></p>
                                @Html.TextBoxFor(m => m.LastName)
                                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Số điện thoại <span>*</span></p>
                                @Html.TextBoxFor(m => m.Phone)
                                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Email <span>*</span></p>
                                @Html.TextBoxFor(m => m.Email)
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Địa chỉ <span>*</span></p>
                                @Html.TextBoxFor(m => m.Address)
                                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Tài khoản <span>*</span></p>
                                @Html.TextBoxFor(m => m.Username)
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Mật khẩu <span>*</span></p>
                                @Html.PasswordFor(m => m.Password)
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Mật khẩu xác nhận<span>*</span></p>
                                @Html.PasswordFor(m => m.ConfirmPassword)
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-6 col-sm-6 d-flex justify-content-center">
                            <button type="submit" class="site-btn">Đăng ký</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>