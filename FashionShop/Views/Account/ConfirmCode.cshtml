@model FashionShop.Models.Common.UserCode
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<section class="checkout spad">
    <div class="container">
        @using (Html.BeginForm("ConfirmCode", "Account", FormMethod.Post, new { @class = "checkout__form" }))
        {
            @Html.AntiForgeryToken()
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Mã xác thực <span>*</span></p>
                                @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="site-btn ">Xác thực</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>